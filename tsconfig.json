{
  "compilerOptions": {
    "lib": ["es7", "dom"],
    "types": ["node"],
    "target": "es6",
    "module": "commonjs",
    "preserveConstEnums": true,
    "rootDir": "src/",
    "outDir": "build/",
    "moduleResolution": "node",
    "allowJs": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "build",
    "lib",
    "dist",
    "test",
    "scripts",
    "spec"
  ]
}
